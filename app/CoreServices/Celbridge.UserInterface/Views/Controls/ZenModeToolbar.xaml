<UserControl
    x:Class="Celbridge.UserInterface.Views.ZenModeToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Minimal toolbar that appears at the top of the screen in Zen Mode when the mouse moves near the top edge -->
    <Grid x:Name="ToolbarContainer"
          Height="36"
          Background="{ThemeResource PanelBackgroundBBrush}"
          BorderBrush="{ThemeResource PanelBorderBrush}"
          BorderThickness="0,0,0,2"
          HorizontalAlignment="Stretch"
          Visibility="Collapsed">
        
        <Grid.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" Y="-36"/>
        </Grid.RenderTransform>

        <!-- Centered exit button -->
        <Button x:Name="ExitButton"
                Click="ExitButton_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="16,6,16,6">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                          Glyph="&#xE73F;"
                          FontSize="14"/>
                <TextBlock Text="Exit Fullscreen" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
