<UserControl
    x:Class="Celbridge.UserInterface.Views.FullscreenToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Minimal toolbar that appears at the top of the screen in fullscreen modes when the mouse moves near the top edge -->
    <!-- Clicking anywhere on the toolbar exits fullscreen, not just the button, to handle cases where UI elements might block the button -->
    <Grid x:Name="ToolbarContainer"
          Height="36"
          Background="{ThemeResource PanelBackgroundBBrush}"
          BorderBrush="{ThemeResource PanelBorderBrush}"
          BorderThickness="0,0,0,2"
          HorizontalAlignment="Stretch"
          Visibility="Collapsed"
          PointerPressed="ToolbarContainer_PointerPressed">
        
        <Grid.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" Y="-36"/>
        </Grid.RenderTransform>

        <!-- Centered exit button -->
        <StackPanel Orientation="Horizontal" 
                    Spacing="8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="16,6,16,6">
            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                      Glyph="&#xE73F;"
                      FontSize="14"/>
            <TextBlock Text="Exit Fullscreen" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
