<Page
x:Class="Celbridge.Workspace.Views.WorkspacePage"
x:Name="WorkspacePageName"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:local="using:Celbridge.Workspace.Views"
xmlns:controls="using:Celbridge.UserInterface.Views.Controls"
xmlns:vm="using:Celbridge.Workspace.ViewModels"
NavigationCacheMode="Required"
DataContext="{x:Bind ViewModel}">

  <Grid x:Name="LayoutRoot"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
    
    <Grid.ColumnDefinitions>
      <ColumnDefinition x:Name="PrimaryPanelColumn" Width="300" MinWidth="100"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition x:Name="SecondaryPanelColumn" Width="300" MinWidth="100"/>
    </Grid.ColumnDefinitions>
    
    <Grid.RowDefinitions>
      <RowDefinition x:Name="DocumentsPanelRow" Height="*"/>
      <RowDefinition x:Name="ConsolePanelRow" Height="200" MinHeight="100"/>
    </Grid.RowDefinitions>

    <!-- Primary Panel -->
    <Grid x:Name="PrimaryPanel"
          Grid.RowSpan="2"
          MinWidth="100"
          Tag="Primary"
          Background="{ThemeResource PanelBackgroundABrush}"
          GotFocus="Panel_GotFocus"
          PointerPressed="Panel_PointerPressed">
    </Grid>

    <!-- Documents Panel -->
    <Grid x:Name="DocumentsPanel"
          Grid.Column="1"
          Tag="Documents"
          Background="{ThemeResource ApplicationBackgroundBrush}"
          GotFocus="Panel_GotFocus"
          PointerPressed="Panel_PointerPressed">
    </Grid>

    <!-- Secondary Panel -->
    <Grid x:Name="SecondaryPanel"
          Grid.Column="2"
          Grid.Row="0"
          Grid.RowSpan="2"
          MinWidth="100"
          Tag="Secondary"
          Background="{ThemeResource PanelBackgroundABrush}"
          GotFocus="Panel_GotFocus"
          PointerPressed="Panel_PointerPressed">
    </Grid>

    <!-- Console Panel -->
    <Grid x:Name="ConsolePanel"
          Grid.Column="1"
          Grid.Row="1"
          Tag="Console"
          Background="{ThemeResource PanelBackgroundBBrush}"
          GotFocus="Panel_GotFocus"
          PointerPressed="Panel_PointerPressed">
    </Grid>

    <!-- Grid splitters -->

    <controls:Splitter x:Name="PrimaryPanelSplitter"
                       Grid.Column="0"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Right"
                       Orientation="Vertical"/>

    <controls:Splitter x:Name="SecondaryPanelSplitter"
                       Grid.Column="2"
                       Grid.RowSpan="2"
                       HorizontalAlignment="Left"
                       Orientation="Vertical"/>

    <controls:Splitter x:Name="ConsolePanelSplitter"
                       Grid.Column="1"
                       Grid.Row="1"
                       VerticalAlignment="Top"
                       Orientation="Horizontal"/>
  </Grid>
</Page>
