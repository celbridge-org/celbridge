<UserControl
    x:Class="Celbridge.Inspector.Views.ResourceNameInspector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Celbridge.Inspector.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Celbridge.Inspector.ViewModels"  
    xmlns:controls="using:Celbridge.UserInterface.Views.Controls">

  <Grid HorizontalAlignment="Stretch"
        Margin="0"
        Padding="0"
        Background="Transparent"
        Height="32">

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <Grid Grid.Column="0"
          Margin="0 0 8 0">

      <StackPanel Orientation="Horizontal">
        <controls:FileIcon
            x:Name="ResourceIcon"
            Source="{x:Bind ViewModel.FileExtension, Mode=OneWay}"
            Size="20"
            MinWidth="20"
            Margin="0,4,4,4"
            VerticalAlignment="Top" />

        <TextBlock
            x:Name="ResourceNameText"
            FontWeight="Bold"
            IsTextSelectionEnabled="True"
            VerticalAlignment="Top"
            Margin="2,4,0,0"
            Text="{x:Bind ViewModel.Resource.ResourceName,Mode=OneWay}" />
      </StackPanel>
    </Grid>

    <Grid Grid.Column="1"
          Margin="0 0 8 0"
          VerticalAlignment="Top">
      <Button x:Name="NavigateToButton"
              Padding="1"
              Command="{x:Bind ViewModel.NavigateToResourceCommand}"
              ToolTipService.ToolTip="{x:Bind SelectFileString}">
        <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Glyph="&#xE8DA;"
                    FontSize="20" />
      </Button>
    </Grid>

  </Grid>
</UserControl>
