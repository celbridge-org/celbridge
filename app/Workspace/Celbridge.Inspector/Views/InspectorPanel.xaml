<UserControl x:Class="Celbridge.Inspector.Views.InspectorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="using:Celbridge.Inspector.Views"
             xmlns:controls="using:Celbridge.UserInterface.Views.Controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             GotFocus="UserControl_GotFocus"
             PointerPressed="UserControl_PointerPressed">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Panel Header -->
    <controls:PanelHeader Grid.Row="0"
                          Panel="Inspector"
                          Region="Secondary"
                          Title="{x:Bind TitleString}"/>

    <local:EntityEditor x:Name="EntityEditor"
                        Grid.Row="1" />
  </Grid>
</UserControl>
