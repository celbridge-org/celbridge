<UserControl
  x:Class="Celbridge.Explorer.Views.ExplorerPanel"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:Celbridge.Explorer.Views"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  DataContext="{x:Bind ViewModel}"
  Background="Transparent"
  PointerEntered="UserControl_PointerEntered"
  PointerExited="UserControl_PointerExited"
  GotFocus="UserControl_GotFocus"
  LostFocus="UserControl_LostFocus">

  <Grid VerticalAlignment="Stretch"
        Background="Transparent">
    <Grid.RowDefinitions>
      <RowDefinition Height="40"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Title Bar -->
    <Grid Grid.Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <TextBlock Grid.Column="0"
                 Text="{x:Bind ViewModel.TitleText, Mode=OneWay}"
                 Margin="12,0,0,0"
                 VerticalAlignment="Center"/>

      <!-- Explorer Toolbar -->
      <local:ExplorerToolbar x:Name="ExplorerToolbar"
                             Grid.Column="2"
                             VerticalAlignment="Center"
                             Margin="0,0,8,0"
                             AddFileClicked="ExplorerToolbar_AddFileClicked"
                             AddFolderClicked="ExplorerToolbar_AddFolderClicked"
                             CollapseFoldersClicked="ExplorerToolbar_CollapseFoldersClicked"/>
    </Grid>

    <!-- Resource Tree -->
    <local:ResourceTree x:Name="ResourceTree"
                        Grid.Row="1"/>

    <!-- Notification Bar -->
    <local:ExplorerNotificationBar Grid.Row="2"/>
  </Grid>
</UserControl>
