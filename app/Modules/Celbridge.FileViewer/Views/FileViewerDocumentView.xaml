<views:WebView2DocumentView
    x:Class="Celbridge.FileViewer.Views.FileViewerDocumentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:Celbridge.Documents.Views"
    xmlns:local="using:Celbridge.FileViewer.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{x:Bind ViewModel}">

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <!--
          DefaultBackgroundColor fixes a visual bug where WebView2 shows white background briefly when switching tabs.
          See: https://github.com/MicrosoftEdge/WebView2Feedback/issues/1412
        -->
        <WebView2
            x:Name="FileWebView"
            DefaultBackgroundColor="Transparent"
            Source="{x:Bind ViewModel.Source, Mode=OneWay}" />
    </Grid>
</views:WebView2DocumentView>
