<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <ResourceDictionary.ThemeDictionaries>

    <!-- Light Theme -->
    <ResourceDictionary x:Key="Light">
      <Color x:Key="ApplicationBackgroundColor">#FFFFFF</Color>
      <Color x:Key="TitleBarActiveColor">#F3F3F3</Color>
      <Color x:Key="TitleBarInactiveColor">#E5E5E5</Color>
      <Color x:Key="PanelBackgroundAColor">#F3F3F3</Color>
      <Color x:Key="PanelBackgroundBColor">#F7F8FA</Color>
      <Color x:Key="DividerColor">#E5E5E5</Color>
      <Color x:Key="ErrorTextColor">#D32F2F</Color>
      <Color x:Key="WarningTextColor">#FFA000</Color>
      <Color x:Key="SearchMatchHighlightColor">#C66300</Color>
      <Color x:Key="ListItemSelectedBackgroundColor">#3C0078D4</Color>
    </ResourceDictionary>

    <!-- Dark Theme -->
    <ResourceDictionary x:Key="Dark">
      <Color x:Key="ApplicationBackgroundColor">#121212</Color>
      <Color x:Key="TitleBarActiveColor">#2B2D30</Color>
      <Color x:Key="TitleBarInactiveColor">#3B3E40</Color>
      <Color x:Key="PanelBackgroundAColor">#2B2D30</Color>
      <Color x:Key="PanelBackgroundBColor">#1E1F22</Color>
      <Color x:Key="DividerColor">#3E4144</Color>
      <Color x:Key="ErrorTextColor">#FF5252</Color>
      <Color x:Key="WarningTextColor">#FFCA28</Color>
      <Color x:Key="SearchMatchHighlightColor">#FFD966</Color>
      <Color x:Key="ListItemSelectedBackgroundColor">#3C0078D4</Color>
    </ResourceDictionary>

  </ResourceDictionary.ThemeDictionaries>

  <SolidColorBrush x:Key="ApplicationBackgroundBrush"
                     Color="{ThemeResource ApplicationBackgroundColor}" />

  <SolidColorBrush x:Key="PanelBackgroundABrush"
                     Color="{ThemeResource PanelBackgroundAColor}" />

  <SolidColorBrush x:Key="PanelBackgroundBBrush"
                     Color="{ThemeResource PanelBackgroundBColor}" />

  <SolidColorBrush x:Key="DividerBrush"
                     Color="{ThemeResource DividerColor}" />

  <SolidColorBrush x:Key="ErrorTextBrush"
                     Color="{ThemeResource ErrorTextColor}" />

  <SolidColorBrush x:Key="SearchMatchHighlightBrush"
                     Color="{ThemeResource SearchMatchHighlightColor}" />

  <SolidColorBrush x:Key="ListItemSelectedBackgroundBrush"
                     Color="{ThemeResource ListItemSelectedBackgroundColor}" />

  <!-- Hack to get title bar color to work - see https://github.com/microsoft/microsoft-ui-xaml/issues/7125 -->
  <SolidColorBrush x:Key="WindowCaptionBackground" Color="Transparent" Opacity="0.5"/>
  <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled" Color="Transparent"/>

</ResourceDictionary>
