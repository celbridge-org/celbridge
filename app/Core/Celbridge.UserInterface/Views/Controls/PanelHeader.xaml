<UserControl
  x:Class="Celbridge.UserInterface.Views.Controls.PanelHeader"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="using:Celbridge.UserInterface.Views.Controls">

  <Grid Height="40"
        Background="{ThemeResource PanelBackgroundABrush}"
        DoubleTapped="TitleBar_DoubleTapped">

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <!-- Focus Indicator -->
    <controls:PanelFocusIndicator x:Name="FocusIndicatorControl"
                                  Grid.Column="0"
                                  Margin="6,0,0,0"/>

    <!-- Title -->
    <TextBlock Grid.Column="1"
               Text="{x:Bind Title, Mode=OneWay}"
               Margin="6,0,0,0"
               VerticalAlignment="Center"/>

    <!-- Toolbar Content Slot -->
    <ContentPresenter Grid.Column="3"
                      Content="{x:Bind ToolbarContent, Mode=OneWay}"
                      VerticalAlignment="Center"
                      Margin="0,0,4,0"/>

    <!-- Close Button -->
    <Button x:Name="CloseButton"
            Grid.Column="4"
            Style="{StaticResource TransparentIconButtonStyle}"
            ToolTipService.ToolTip="Close panel"
            Margin="0,0,8,0"
            VerticalAlignment="Center"
            Click="CloseButton_Click">
      <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}"
                Glyph="&#xE711;"
                FontSize="14" />
    </Button>
  </Grid>
</UserControl>
