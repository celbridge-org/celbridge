<UserControl
  x:Class="Celbridge.UserInterface.Views.FullscreenToolbar"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  VerticalAlignment="Top"
  HorizontalAlignment="Stretch">

  <!--
  Minimal toolbar that appears at the top of the screen in fullscreen modes when the mouse moves near the top edge.
  Clicking anywhere on the toolbar exits fullscreen. The TriggerZone is an invisible area at the top that detects mouse hover.
  -->
  <Grid x:Name="RootContainer">
    <!-- Invisible trigger zone that sits above all other UI elements -->
    <Border x:Name="TriggerZone"
            Height="4"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Background="Transparent"
            Visibility="Collapsed"/>

    <!-- The actual toolbar that slides down when triggered -->
    <Grid x:Name="ToolbarContainer"
          Height="36"
          Background="{ThemeResource PanelBackgroundBBrush}"
          BorderBrush="{ThemeResource PanelBorderBrush}"
          BorderThickness="0,0,0,2"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Top"
          Visibility="Collapsed"
          PointerPressed="ToolbarContainer_PointerPressed">

      <Grid.RenderTransform>
        <TranslateTransform x:Name="SlideTransform"
                            Y="-36"/>
      </Grid.RenderTransform>

      <!-- Centered exit label -->
      <StackPanel Orientation="Horizontal"
                  Spacing="8"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Padding="16,6,16,6">
        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                  Glyph="&#xE73F;"
                  FontSize="14"/>
        <TextBlock Text="{x:Bind ExitFullscreenString}"
                   VerticalAlignment="Center"/>
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
