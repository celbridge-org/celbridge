<UserControl
    x:Class="Celbridge.UserInterface.Views.Controls.FileIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:Celbridge.UserInterface.Services">

    <UserControl.Resources>
        <ui:FontFamilyConverter x:Key="FontFamilyConverter" />
    </UserControl.Resources>

    <FontIcon
        x:Name="IconElement"
        FontFamily="{x:Bind IconDefinition.FontFamily, Mode=OneWay, Converter={StaticResource FontFamilyConverter}}"
        Glyph="{x:Bind IconDefinition.FontCharacter, Mode=OneWay}"
        Foreground="{x:Bind IconDefinition.FontColor, Mode=OneWay}"
        FontSize="{x:Bind Size, Mode=OneWay}" />

</UserControl>
